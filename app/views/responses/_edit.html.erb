<%= form_with(model: [audio, response], local: false) do |form| %>
  <% if response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(response.errors.count, "error") %> prohibited this response from being saved:</h2>
      <ul>
      <% response.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.text_area :comment, id: "response_comment_#{audio.id}",size: "60x4", style: "border: none", placeholder: "コメント", wrap: "hard" %>
  </div>
  <div class="response_file" %>
    <%= form.file_field :file %>
  </div> 
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>