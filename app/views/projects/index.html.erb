<h1><%= current_user.name %>のプロジェクト</h1>

<table>
  <tr>
    <th>プロジェクト名</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <% if current_user == project.user %>
      <td><%= project.name %></td>
      <td><%= link_to 'メンバー', project_path(project.id) %></td>
      <td><%= link_to 'ミュージック', audios_path(project_id: project.id) %></td> 
    <% else %>
      <td></td>
      <td></td>
    <% end %>
  </tr>
<% end %>

<% current_user.join_projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= link_to 'メンバー', project_path(project.id) %></td> 
    <td><%= link_to 'ミュージック', audios_path(project_id: project.id)%></td> 
  </tr>
<% end %>

</table>
