<div class="centered-form">
<h5>アカウントを編集</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name",size: "50",style: "border: none", placeholder: "名前" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",size: "50",style: "border: none", placeholder: "メールアドレス" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",size: "50",style: "border: none", placeholder: "新しいパスワード" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",size: "50",style: "border: none", placeholder: "新しいパスワード(確認用)" %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "current-password",size: "50",style: "border: none", placeholder: "現在のパスワード" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-secondary",style: "width: 100%; height: 40px;" %>
  </div>
<% end %>

</div>
